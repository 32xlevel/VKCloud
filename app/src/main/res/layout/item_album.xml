<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/album_thumbnail"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corners_6"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/album_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_remove_24"
            android:visibility="gone" />

        <View
            android:id="@+id/album_gray_overlay"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_gravity="center"
            android:background="#78e1e9f0"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_corners_6"
        android:fontFamily="@font/roboto"
        android:maxWidth="158dp"
        android:textColor="@android:color/black"
        tools:text="Бэкстейдж клипа в темноте" />

    <TextView
        android:id="@+id/album_photos_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/roboto"
        android:maxWidth="158dp"
        android:textSize="13sp"
        tools:text="154 фотографии" />

</LinearLayout>